<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Superhéroe</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function agregarCampoPoder() {
            const container = document.getElementById('poderesContainer');
            const input = document.createElement('input');
            input.type = 'text';
            input.name = 'poderes';
            input.required = true;
            input.className = "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300 mt-2";
            container.appendChild(input);
        }
    </script>
</head>
<body class="bg-gray-100 text-gray-900 flex items-center justify-center min-h-screen">

    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-4">Editar Superhéroe</h2>

        <form action="/api/heroes/editar/<%= superheroe._id %>?_method=PUT" method="POST" class="space-y-4">
            
            <label class="block">
                <span class="text-gray-700">Nombre del Superhéroe</span>
                <input type="text" name="nombreSuperHeroe" value="<%= superheroe.nombreSuperHeroe %>" required 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300">
            </label>

            <label class="block">
                <span class="text-gray-700">Nombre Real</span>
                <input type="text" name="nombreReal" value="<%= superheroe.nombreReal %>" required 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300">
            </label>

            <label class="block">
                <span class="text-gray-700">Edad</span>
                <input type="number" name="edad" value="<%= superheroe.edad %>" required 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300">
            </label>

            <label class="block">
                <span class="text-gray-700">Planeta de Origen</span>
                <input type="text" name="planetaOrigen" value="<%= superheroe.planetaOrigen %>" required
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300">
            </label>

            <label class="block">
                <span class="text-gray-700">Debilidad</span>
                <input type="text" name="debilidad" value="<%= superheroe.debilidad %>" required 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300">
            </label>

            <!-- Campo para agregar poderes -->
            <label class="block">
                <span class="text-gray-700">Poderes</span>
                <div id="poderesContainer">
                    <% superheroe.poderes.forEach(poder => { %>
                        <input type="text" name="poderes" value="<%= poder %>" required
                            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300 mt-2">
                    <% }); %>
                </div>
                <button type="button" onclick="agregarCampoPoder()" 
                        class="mt-2 text-sm text-blue-500 hover:underline">+ Agregar otro poder</button>
            </label>

            <div class="flex justify-between mt-4">
                <a href="/dashboard" class="px-4 py-2 bg-gray-300 rounded-lg hover:bg-gray-400">Cancelar</a>
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Guardar Cambios</button>
            </div>

        </form>
    </div>

</body>
</html>
